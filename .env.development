# Django Settings
DEBUG=True
SECRET_KEY=dev_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (SQLite for development)
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=dev_email@example.com
EMAIL_HOST_PASSWORD=dev_password
DEFAULT_FROM_EMAIL=Pawnshop Management <no-reply@example.com>

# Face Recognition Settings
FACE_RECOGNITION_MODEL=hog
FACE_RECOGNITION_TOLERANCE=0.6

# Security Settings
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Redis Cache Settings (Local)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=dev_redis_password

# AWS S3 Storage (Development Bucket)
AWS_ACCESS_KEY_ID=dev_access_key
AWS_SECRET_ACCESS_KEY=dev_secret_key
AWS_STORAGE_BUCKET_NAME=dev-bucket-name
AWS_S3_REGION_NAME=your-region

# Payment Gateway Settings (Stripe Test Keys)
STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_test_your_key

# Logging
LOG_LEVEL=DEBUG
LOG_FILE_PATH=logs/pawnshop_dev.log

# Rate Limiting (More lenient for development)
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_PER_HOUR=2000

# Security Headers (Relaxed for development)
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=SAMEORIGIN
