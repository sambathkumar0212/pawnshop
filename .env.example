# Django Settings
DEBUG=True
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# SQLite (default)
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3

# PostgreSQL (recommended for production)
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=pawnshop
DATABASE_USER=pawnshop_admin
DATABASE_PASSWORD=secure_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=Pawnshop Management <no-reply@example.com>

# Face Recognition Settings
FACE_RECOGNITION_MODEL=hog  # 'hog' is faster but less accurate, 'cnn' requires GPU but is more accurate
FACE_RECOGNITION_TOLERANCE=0.6  # Lower is stricter

# Security Settings
SECURE_SSL_REDIRECT=False  # Set to True in production
SESSION_COOKIE_SECURE=False  # Set to True in production
CSRF_COOKIE_SECURE=False  # Set to True in production