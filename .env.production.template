# Production environment settings - TEMPLATE FILE
# IMPORTANT: This is a template. Replace with real values but DO NOT commit to version control.
DJANGO_ENV=production

# Option 1: Configure database using DATABASE_URL (preferred)
DATABASE_URL=postgres://<user>:<password>@<host>:<port>/<database>?sslmode=require

# Option 2: Configure database using individual settings
# Only needed if DATABASE_URL is not set
DB_NAME=your_db_name_here
DB_USER=your_db_user_here
DB_PASSWORD=your_db_password_here
DB_HOST=your_db_host_here
DB_PORT=your_db_port_here
DB_SSLMODE=require

# Debug settings - should be false in production
DEBUG=false
ALLOWED_HOSTS=your_domain.com,www.your_domain.com

# Security settings - use a strong unique secret key
SECRET_KEY=your-secure-production-key-here
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# Other settings
TIME_ZONE=Asia/Kolkata

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your_provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@your_domain.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=Your App <no-reply@your_domain.com>

# Face Recognition Settings
FACE_RECOGNITION_MODEL=cnn
FACE_RECOGNITION_TOLERANCE=0.5

# Redis Cache Settings
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password

# AWS S3 Storage (if applicable)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_bucket_name
AWS_S3_REGION_NAME=your_aws_region

# Security Headers
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY