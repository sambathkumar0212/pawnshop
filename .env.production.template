# Production environment settings - TEMPLATE FILE
# IMPORTANT: This is a template. Copy to .env.production and fill in your values
DJANGO_ENV=production

# Database configuration using DATABASE_URL (preferred method)
DATABASE_URL=postgresql://<username>:<password>@<host>:<port>/<database>?sslmode=require

# Alternative database configuration using individual settings
# Only needed if DATABASE_URL is not set
DB_NAME=<database_name>
DB_USER=<database_user>
DB_PASSWORD=<database_password>
DB_HOST=<database_host>
DB_PORT=<database_port>
DB_SSLMODE=require

# Application settings
DEBUG=false
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Security settings
SECRET_KEY=<your-secure-production-key>
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# Email settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=<smtp_host>
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=<email_user>
EMAIL_HOST_PASSWORD=<email_password>
DEFAULT_FROM_EMAIL=Your App <noreply@your-domain.com>

# Other settings
TIME_ZONE=Asia/Kolkata
